{
    "version": 2,
    "builds": [
        {
            "src": "/api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb", // adjust this as necessary
                "runtime": "python3.9" // or "python3.8", "python3.10", etc.
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ]
}
