{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.9" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "BOT_TOKEN": "@bot_token",
    "EMAIL_ADDRESS": "@email_address",
    "EMAIL_PASSWORD": "@email_password",
    "DEBUG": "@debug"
  }
}